@model BookViewModel

<div class="card">
  <div class="card-header">
        <h3 class="card-title">
          @Html.DisplayNameFor(x => Model.Name):
          @Model.Name
        </h3>

  </div>
  <div class="card-body">
    <p>
      <span class="font-weight-bold">
        @Html.DisplayNameFor(x => Model.Year):
      </span> @Model.Year
    </p>
    <h5 class="card-title">
      @Html.DisplayNameFor(x => Model.Authors):
    </h5>
    @foreach (var author in @Model.Authors)
    {
      <p>
        <span class="font-weight-bold">
          @Html.DisplayNameFor(x => author.Surname):
        </span> @author.Surname
      </p>
      @Html.ActionLink("View author", "AuthorProfile", "Library", new {id = author.Id}, new {@class = "btn btn-link"})
    }
  </div>
  <div class="card-footer">
      <a href="@Url.Action("Index")" class="btn btn-primary d-inline-flex align-items-center">
        <svg style="margin-right: 7px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16"><path d="M10.53 5.03a.75.75 0 10-1.06-1.06l-6.25 6.25a.75.75 0 000 1.06l6.25 6.25a.75.75 0 101.06-1.06L5.56 11.5H17a3.248 3.248 0 013.25 3.248v4.502a.75.75 0 001.5 0v-4.502A4.748 4.748 0 0017 10H5.56l4.97-4.97z"></path></svg>
        Back
      </a>
  </div>
</div>
