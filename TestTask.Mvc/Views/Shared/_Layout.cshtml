<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestTask.Mvc</title>
    <partial name="_StylesPartial"/>
</head>
<body>
    <header>
        @await Html.PartialAsync("_MenuBar")
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - TestTask.Mvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<partial name="_ScriptsPartial"/>
@RenderSection("Scripts", required: false)
</body>
</html>
